<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("head", required: false)

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" id="meni">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                
            </div>
            <div class="navbar-collapse collapse">
                
                <ul class="nav navbar-nav">
                    <li class="tabb"><a href="/Home/Index" style="left:-150px;font-size:30px;font-family:Cambria, Cochin, Georgia, Times, Times New Roman, serif">AppleMania</a></li>
                    <li class="tabb"><a href="/Home/Index" style="left:-100px;font-size:20px;font-family:Cambria, Cochin, Georgia, Times, Times New Roman, serif">Home</a></li>
                    <li class="tabb"><a href="/Home/About" style="left:-100px;font-size:20px;font-family:Cambria, Cochin, Georgia, Times, Times New Roman, serif">About</a></li>
                    <li class="tabb"><a href="/Home/Contact" style="left:-100px;font-size:20px;font-family:Cambria, Cochin, Georgia, Times, Times New Roman, serif">Contact</a></li>
                    <li class="tabb"><a href="/Rates/Index" style="left:-100px;font-size:20px;font-family:Cambria, Cochin, Georgia, Times, Times New Roman, serif">Rate us</a></li>
                    @if (User.IsInRole("admin"))
                    {
                        <li class="tabb"><a href="/Account/AddUserToRole" style="left:-100px;font-size:20px;font-family:Cambria, Cochin, Georgia, Times, Times New Roman, serif">Add role</a></li>
                    }

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p class="tekst">&copy; @DateTime.Now.Year - AppleMania</p>
            <p class="tekst1">Follow: </p>

            <a href="https://www.instagram.com" target="_blank"><img src="~/Images/i1.png" class="foo" /></a>
            <a href="https://www.facebook.com" target="_blank"><img src="~/Images/f1.png" class="foo1" /></a>
            <a href="https://www.tweeter.com" target="_blank"><img src="~/Images/t1.png" class="foo2" /></a>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
